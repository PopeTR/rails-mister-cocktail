<div class="show-banner">
  <%= cl_image_tag @cocktail.photo.key, class: "card-category" %>
  <div class="header">
    <h2><%= @cocktail.name %></h2>
  </div>
</div>

<div class="row">
  <div class="container-doses">
    <ul>
      <h2>Ingredients:</h2>
      <% @cocktail.doses.each do |dose|  %>
        <li><%= dose.ingredient.name %> | <%= dose.description %> | <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
          <% end %>
             %></li>
      <% end %>
    </ul>
  </div>

  <div class="container-form">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

