<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.pexels.com/photos/605408/pexels-photo-605408.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260);">
  <div class="container">
    <h1>Tommys Cocktails</h1>
    <p>Check out and add your favourite cocktails</p>
  </div>
</div>


<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card-trip">
          <% if cocktail.photo.attached? %>
                <%= cl_image_tag cocktail.photo.key %>
          <% else %>
            <img src="https://source.unsplash.com/1600x900/?cocktail" alt="cocktail index" />
          <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= link_to "#{cocktail.name}", cocktail_path(cocktail.id) %></h2>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



